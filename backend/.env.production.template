# Django Settings
SECRET_KEY=GENERATE_NEW_SECRET_KEY_HERE
DJANGO_SETTINGS_MODULE=config.settings
DEBUG=False
ALLOWED_HOSTS=uparwala.in,www.uparwala.in

# Database Configuration (Get from cPanel)
DB_NAME=your_cpanel_username_uparwala_db
DB_USER=your_cpanel_username_uparwala_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=3306

# CORS Origins
CORS_ORIGINS=https://uparwala.in,https://www.uparwala.in

# Razorpay Payment Gateway (Get from Razorpay Dashboard)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret_key

# Email Configuration (Optional - for order notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Shiprocket (Optional - if using Shiprocket)
SHIPROCKET_EMAIL=your-shiprocket-email
SHIPROCKET_PASSWORD=your-shiprocket-password
